{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true, /* Ensure that casing is correct in imports. */
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true, /* Specify what module code is generated. */
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "types": [
      "node",
      "express"
    ],
  },
  "include": [
    "src/**/*"
  ]
}