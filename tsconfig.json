{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/controllers/*": [
        "src/controllers/*"
      ],
      "@/repository/*": [
        "src/repository/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/middlewares/*": [
        "src/middlewares/*"
      ],
      "@/validation/*": [
        "src/validation/*"
      ],
      "@/services/*": [
        "src/services/*"
      ]
    },
    "esModuleInterop": true, /* Ensure that casing is correct in imports. */
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true, /* Specify what module code is generated. */
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "types": [
      "node",
      "express"
    ],
    "lib": [
      "es2020"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}